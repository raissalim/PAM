import { NavigationContainer } from '@react-navigation/native';
import { createNativeStackNavigator } from '@react-navigation/native-stack';
import * as Animatable from 'react-native-animatable';
import { StatusBar } from 'expo-status-bar';
import { StyleSheet, Text, View, Image, TouchableOpacity } from 'react-native';
import logo from './assets/logozoo-removebg-preview.png';

const Stack = createNativeStackNavigator();

const HomeScreen = ({ navigation }) => {
  const handlePress = () => {
    navigation.navigate('NewScreen'); 
  };

  return (
    <View style={styles.container}>
      <Animatable.View style={styles.animacaoLogo} animation="fadeIn" duration={2000} delay={500}>
        <Image source={logo} style={styles.image} />
      </Animatable.View>
        <Animatable.View style={styles.animacaoBotao} animation="fadeIn" duration={2000} delay={2200}>
          <TouchableOpacity style={styles.button} onPress={handlePress}>
            <Text style={styles.buttonText}>Entrar</Text>
          </TouchableOpacity>

        </Animatable.View>
      <StatusBar style="auto" />
    </View>
  );
};

const NewScreen = () => {
  return (
    <View style={styles.container}>
      <Text style={styles.text}>Bem-vindo Ã  nova tela!</Text>
    </View>
  );6
};

export default function App() {
  return (
    <NavigationContainer>
      <Stack.Navigator initialRouteName="Menu">
        <Stack.Screen name="Home" component={HomeScreen} />
        <Stack.Screen name="NewScreen" component={NewScreen} />
      </Stack.Navigator>
    </NavigationContainer>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#C5F558',
    alignItems: 'center',
    justifyContent: 'center',
  },
  image: {
    width: 300,
    height: 300,
    marginTop: 20,
  },
  button: {
    width: 200,
    marginTop: 20,
    backgroundColor: '#A0D934',
    padding: 10,
    borderRadius: 5,
  },
  buttonText: {
    color: '#000',
    fontSize: 16,
    textTransform: 'uppercase',
    marginLeft: 57,
    fontWeight: 'bold',

  },
  text: {
    fontSize: 24,
    color: '#000',
  },
});
